<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introduce3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="815dp"
        android:background="@mipmap/bg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="358dp"
            android:layout_height="253dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="329dp"
                android:layout_height="242dp"
                android:layout_marginTop="16dp"
                android:fontFamily="monospace"
                android:text="Và đó là những thông tin cá nhân tôi muốn chia sẻ , Chúc mọi người một ngày vui vẻ."
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/btnquaylai5"
            android:layout_width="188dp"
            android:layout_height="164dp"
            android:layout_marginStart="83dp"
            android:layout_marginEnd="83dp"
            android:background="@mipmap/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

        <TextView
            android:id="@+id/btnquaylai3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="75dp"
            android:fontFamily="@font/playpen_sans"
            android:text="Quay lại"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnquaylai5"
            app:layout_constraintEnd_toEndOf="@+id/btnquaylai5"
            app:layout_constraintStart_toStartOf="@+id/btnquaylai5"
            app:layout_constraintTop_toTopOf="@+id/btnquaylai5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>