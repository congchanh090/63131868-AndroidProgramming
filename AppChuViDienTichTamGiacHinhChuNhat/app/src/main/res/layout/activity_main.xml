<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính Chu Vi và Diện Tích"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Nhập cạnh tam giác -->
    <EditText
        android:id="@+id/sideA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập cạnh a"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/sideB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập cạnh b"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/sideC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập cạnh c"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/calculateTriangleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính tam giác"/>

    <!-- Nhập chiều dài và chiều rộng hình chữ nhật -->
    <EditText
        android:id="@+id/length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập chiều dài"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập chiều rộng"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/calculateRectangleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính hình chữ nhật"/>

    <!-- Hiển thị kết quả -->
    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"/>

</LinearLayout>
